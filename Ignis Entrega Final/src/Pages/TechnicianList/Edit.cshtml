@page
@model Ignis.Pages_TechnicianList.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tecnico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tecnico.Available" /> @Html.DisplayNameFor(model => model.Tecnico.Available)
                </label>
            </div>
            <input type="hidden" asp-for="Tecnico.Id" />
            <input type="hidden" asp-for="Tecnico.Name" />
            <input type="hidden" asp-for="Tecnico.DOB" />
            <input type="hidden" asp-for="Tecnico.Role" />
            <input type="hidden" asp-for="Tecnico.UserName" />
            <input type="hidden" asp-for="Tecnico.NormalizedUserName" />
            <input type="hidden" asp-for="Tecnico.Email" />
            <input type="hidden" asp-for="Tecnico.NormalizedEmail" />
            <input type="hidden" asp-for="Tecnico.EmailConfirmed" />
            <input type="hidden" asp-for="Tecnico.PasswordHash" />
            <input type="hidden" asp-for="Tecnico.SecurityStamp" />
            <input type="hidden" asp-for="Tecnico.ConcurrencyStamp" />
            <input type="hidden" asp-for="Tecnico.PhoneNumber" />
            <input type="hidden" asp-for="Tecnico.PhoneNumberConfirmed" />
            <input type="hidden" asp-for="Tecnico.TwoFactorEnabled" />
            <input type="hidden" asp-for="Tecnico.LockoutEnd" />
            <input type="hidden" asp-for="Tecnico.LockoutEnabled" />
            <input type="hidden" asp-for="Tecnico.AccessFailedCount" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
