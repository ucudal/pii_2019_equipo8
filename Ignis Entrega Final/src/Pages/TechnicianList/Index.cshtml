@page
@model Ignis.Pages_TechnicianList.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Technician[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Technician[0].DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Technician[0].AverageRanking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Technician[0].TotalWorks)
            </th>
            
            
            <th>
                @Html.DisplayNameFor(model => model.Technician[0].Available)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Technician[0].WorkersWithRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Technician) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageRanking)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalWorks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            <td>
                @foreach (var i in item.WorkersWithRole)
                {
                    <dd>
                        @Html.DisplayFor(modelItem => i.RoleWorker.Title)
                    @Html.DisplayFor(modelItem => i.RoleWorker.Level)
                    </dd>
                                            
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
