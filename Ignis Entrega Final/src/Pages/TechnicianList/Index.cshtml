</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tecnico[0].RoleWorker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnico[0].AverageRanking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnico[0].TotalPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnico[0].TotalWorks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnico[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnico[0].DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnico[0].Available)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tecnico) {
        <tr>
            <td>
                @foreach (var i in item.RoleWorker)
                {
                    <dd>
                        @Html.DisplayFor(modelItem => i.Title)
                    </dd>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageRanking)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalWorks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
