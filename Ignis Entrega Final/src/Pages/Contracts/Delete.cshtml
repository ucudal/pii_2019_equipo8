@page
@model Ignis.Pages_Contracts.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Contract</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => Model.Contract.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.Client.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => Model.Contract.Technician)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.Technician.Name)
        </dd>
    </dl>

    <h4>WriteFeedback</h4>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Feedback.Comment" class="control-label"></label>
                    <input asp-for="Feedback.Comment" class="form-control" />
                    <span asp-validation-for="Feedback.Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Feedback.Rating" class="control-label"></label>
                    <input asp-for="Feedback.Rating" class="form-control" />
                    <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
                </div>
            
                <input type="hidden" asp-for="Contract.ClientId" />
                <input type="hidden" asp-for="Contract.TechnicianId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./Index">Back to List</a>
            </form>
        </div>
    </div>
</div>