@page
@model Ignis.Pages_AdminContracts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].BaseCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].Tecnico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].Client)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Contract) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BaseCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tecnico.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ClientId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ClientId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ClientId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
